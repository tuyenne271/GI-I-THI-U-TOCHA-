@{
    ViewData["Title"] = "Tuyển Dụng - Tocha";
}

<div class="recruitment-page">

    <section class="recruitment-banner">
        <div class="banner-content">
            <h1>TUYỂN DỤNG</h1>
            <p>GIA NHẬP ĐẠI GIA ĐÌNH TOCHA</p>
        </div>
    </section>

    <section class="job-listing-section">
        <div class="container">
            <h2 class="section-title">CÁC VỊ TRÍ ĐANG TUYỂN DỤNG</h2>

            <div class="job-list">
                <article class="job-item">
                    <div class="job-item-header">
                        <img src="~/assets/icon-chinhsach.png.png" alt="Icon Pha chế" class="job-icon">
                        <h3 class="job-title">NHÂN VIÊN PHA CHẾ (FULL-TIME/PART-TIME)</h3>
                    </div>
                    <div class="job-item-body">
                        <div class="job-details">
                            <h4>Mô tả công việc:</h4>
                            <ul>
                                <li>Pha chế đồ uống theo đúng công thức, quy trình.</li>
                                <li>Tư vấn, giới thiệu sản phẩm cho khách hàng.</li>
                            </ul>
                        </div>
                        <div class="job-details">
                            <h4>Yêu cầu:</h4>
                            <ul>
                                <li>Nam/Nữ từ 18 - 25 tuổi.</li>
                                <li>Nhanh nhẹn, trung thực, có trách nhiệm.</li>
                            </ul>
                        </div>
                    </div>
                    <div class="job-item-footer">
                        <a href="#" class="apply-button">ỨNG TUYỂN NGAY</a>
                    </div>
                </article>
            </div>
        </div>
    </section>

</div>